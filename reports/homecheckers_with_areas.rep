###
SELECT OwnerName, ID AS OID, OwnerAddress, OwnerTown, OwnerCounty, OwnerPostcode, HomeTelephone, MobileTelephone, HomecheckAreas, EmailAddress
FROM owner
WHERE IsHomeChecker = 1
ORDER BY OwnerName
